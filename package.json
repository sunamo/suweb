{
  "name": "@sunamo/suweb",
  "version": "1.1.0",
  "description": "Shared package for npmjs.org with methods used in more projects.",
  "main": "./lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "pnpm clean && tsc --project tsconfig.build.json",
    "clean": "rm -rf ./lib/",
    "lint": "eslint ./src/ --fix",
    "prepare": "husky",
    "test:watch": "jest --watch",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "build:tsc-watch": "tsc --project tsconfig.build.json --watch",
    "build:auto-index2": "tsx-auto-indexer --dir src --output src/index.ts --watch",
    "build:auto-index": "barrelsby -d src --delete",
    "barrels": "node ./.scripts/generate-barrels.js",
    "release": "semantic-release --no-ci",
    "barrels:watch": "barrelsby --config .barrelsby.json --no-default-export --watch",
    "barrels:generate": "barrelsby --config .barrelsby.json --no-default-export --delete",
    "test:cov": "jest --coverage --coverageReporters=\"json-summary\"",
    "build:watch": "npm-run-all -p build:tsc-watch build:auto-index"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sunamo/suweb.git"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "author": "Radek Jančík <radek.jancik@sunamo.cz> (https://github.com/sunamo)",
  "engines": {
    "node": ">=22.0"
  },
  "keywords": [
    "boilerplate",
    "template",
    "typescript",
    "vscode",
    "jest",
    "husky",
    "commitizen",
    "semantic-release",
    "codecov"
  ],
  "bugs": {
    "url": "https://github.com/sunamo/suweb/issues"
  },
  "homepage": "https://github.com/sunamo/suweb#readme",
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@ryansonshine/commitizen": "^4.2.8",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/jest": "^30.0.0",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "barrelsby": "^2.8.1",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.0.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "lint-staged": "^13.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "semantic-release": "^21.0.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.2.1",
    "typescript": "^5",
    "typescript-eslint": "^8.35.1"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "pnpm barrels",
      "pnpm test:cov",
      "node ./.scripts/update-coverage-badge.js",
      "git add README.md"
    ]
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm"
    ]
  },
  "dependencies": {
    "luxon": "^3.5.0",
    "tslib": "^2.8.1"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "types": "./lib/index.d.ts"
}
